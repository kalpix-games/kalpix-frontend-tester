# ========================================
# UNO React Tester - Environment Variables
# ========================================
# Copy this file to .env.local and fill in your values
# ========================================

# ========================================
# Nakama Server Configuration
# ========================================
# Backend server URL (without http://)
REACT_APP_NAKAMA_HOST=localhost
REACT_APP_NAKAMA_PORT=7350
REACT_APP_NAKAMA_SERVER_KEY=defaultkey
REACT_APP_NAKAMA_USE_SSL=false

# ========================================
# Firebase Configuration (Optional)
# ========================================
# Only needed if using Firebase authentication
# Get these from: Firebase Console → Project Settings → General → Your apps → Web app

REACT_APP_FIREBASE_API_KEY=your_api_key_here
REACT_APP_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your_project_id
REACT_APP_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
REACT_APP_FIREBASE_APP_ID=your_app_id

